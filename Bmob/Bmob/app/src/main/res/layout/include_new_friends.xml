<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/layout_selector">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/new_friends_icon"
            tools:ignore="RtlCompat"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新朋友"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />
        <ImageView
            android:id="@+id/iv_new_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/msg_tips"
            android:layout_toRightOf="@+id/imageView2" />

    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/base_horization_line" >
    </View>
    <RelativeLayout
        android:id="@+id/layout_near"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/layout_selector">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/icon_near"
            tools:ignore="RtlCompat"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近的人"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

    </RelativeLayout>
</LinearLayout>